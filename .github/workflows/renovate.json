{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
      "config:base"
    ],
    "customManagers": [
      {
        "customType": "regex",
        "fileMatch": ["^embedded-bin/Makefile\\.variables$"],
        "matchStrings": [
          "runc_version\\s*=\\s*(?<currentValue>\\d+\\.\\d+\\.\\d+)"
        ],
        "packageNameTemplate": "opencontainers/runc",
        "versioningTemplate": "semver-coerced"
      }
    ],
    "prConcurrentLimit": 1,
    "prHourlyLimit": 1,
    "dependencyDashboard": true
  }
